# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[{src,pio}/**.{cpp,h}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[pio/**.py]
indent_style = space
indent_style = 4
trim_trailing_whitespace = true
insert_final_newline = true
